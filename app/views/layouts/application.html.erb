<!DOCTYPE html>
<html>
  <head>
    <title>ClientProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">TRaff & Co.</a>
        </div>

        <ul class="nav navbar-nav">
          <% if @current_user%>
            <li><a href="/users/<%=@current_user.id%>"><%= @current_user.email %></a></li>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/recipes/new"> Create New Recipe </a></li>
            <li>
              <%= form_tag(recipes_path, :method => "get", class: 'search') do %>
                <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search Recipes" %>
            </li>
            <li class="searchbutton">
              <%= submit_tag "Search", :name => nil%>
            </li>
              <% end %>

          <% else %>
            <li><a href="/login">Login</a></li>
            <li><a href="/users/new">New User</a></li>
          <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
