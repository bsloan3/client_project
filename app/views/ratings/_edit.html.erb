<%= form_tag("/recipes/#{rating.recipe_id}/ratings/#{rating.id}", method: 'put') do %>
  <input type="hidden" name="recipe_id" value="<%=rating%>">
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" class="btn btn-primary btn-md rating" value="Rate">
<%end%>
