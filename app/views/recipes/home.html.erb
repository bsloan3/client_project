<br><br>
<!-- top recipes -->
<div class="row text-center">

  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Top Main Courses</h4>
        <% @main_course_sort[0...3].each do |recipe| %>
          <p class="card-text">
            <strong><a href="/recipes/<%=recipe.id %>"><%= recipe.name %></a></strong> | Rating: <%= recipe.ratings.average(:rating) %>
          </p>
        <% end %>
      </div>
      <div class="card-footer">
        <%=form_tag(recipes_path, method: "get") do%>
          <input type="hidden" name="search" value="Main Course">
          <button type="submit" class="btn-primary">Browse The Recipes!</button>
        <%end%>
      </div>
    </div>
  </div>

