<div class="row header" id="show-head">
  <div class="col-md-8 col-sm-8 col-lg-8"></div>
  <div  class="col-md-4 col-sm-4 col-lg-4">
    <h1>Create New Recipe!</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-3 col-sm-1">

  </div>
  <div class="col-md-6 col-sm-10">

    <div class="new-form">
      <%= form_for @recipe do |form| %>
        <%if @recipe.errors.any? %>
          <div id="error_explantion">
            <ul>
              <% @recipe.errors.full_messages.each do |msg| %>
                      <div style="color: red;"><%= msg %></div>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.label :name, for: "name" %><br>
          <%= form.text_field :name, class: 'form-control', id: "name", placeholder: "ex: Jane Doe" %>
        </div>
        <div class="form-group">
          <%= form.label :category %><br>
          <%= form.select :category, ["Dessert", "Appetizer", "Salad", "Main Course"], {:include_blank => 'Select One'}, { :class => 'form-control'}  %>
        </div>
        <div class="form-group">
          <%= form.label :difficulty_level %><br>
          <%= form.select :difficulty_level, [1, 2, 3, 4, 5], {:include_blank => 'Select Level'}, { :class => 'form-control'} %>
        </div>
        <div class="form-group">
          <%= form.label :prep_time, "Preperation Time (Minutes)" %><br>
          <%= form.text_field :prep_time, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :directions %><br>
          <%= form.text_area :directions, class: 'form-control' %>
        </div>

        Ingredients:
        <ul class="add-ingredient-container">
          <div class="lables row">
            <div class="col-sm-4">
              <label>Ingredient name:</label>
            </div>
            <div class="col-sm-3">
              <label>Amount</label>
            </div>
            <div class="col-sm-3">
            <label>Measurement</label>
            </div>
          </div>
          <%= form.fields_for :ingredients do |ingredients_form| %>
            <li class="ingredient-form">
              <div class="form-group row ingr">
                <div class="item col-sm-4">
                  <%= ingredients_form.text_field :item, placeholder: "ex: milk", class: 'form-control'  %>
                </div>
                <div class="col-sm-3">
                  <%= ingredients_form.text_field :amount, placeholder: 'ex: 0', class: 'form-control'  %>
                </div>
                <div class="col-sm-3">
                  <%= ingredients_form.text_field :measurement, placeholder: "ml", class: 'form-control' %>
                </div>
                <div class="col-sm-2">
                  <button type="button" class="btn btn-danger hide-ingredient ingr">Remove</button>
                </div>
              </div>
            </li>
            <% end %>
          <button type="button" class="btn btn-success show-ingredient ingr outside">Add Ingredient</button>
        </ul>

        <%= form.submit 'Create Recipe', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
