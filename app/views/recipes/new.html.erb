<h3>Create New Recipe!</h3>

<%= form_for @recipe do |form| %>
  <%if @recipe.errors.any? %>
    <div id="error_explantion">
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
                <p style="color: red;"><%= msg %></p>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :category %><br>
    <%= form.select :category, ["Dessert", "Appetizer", "Salad", "Main Course"], :prompt => 'Select One' %>
  </p>
  <p>
    <%= form.label :difficulty_level %><br>
    <%= form.text_field :difficulty_level %>
  </p>
  <p>
    <%= form.label :prep_time %><br>
    <%= form.text_field :prep_time %>
  </p>
  <p>
    <%= form.label :directions %><br>
    <%= form.text_area :directions %>
  </p>

  Ingredients:
  <ul>
    <%= form.fields_for :ingredients do |ingredients_form| %>
      <li>
        <%= ingredients_form.label :item %>
        <%= ingredients_form.text_field :item %>

        <%= ingredients_form.label :amount %>
        <%= ingredients_form.text_field :amount %>

        <%= ingredients_form.label :measurement %>
        <%= ingredients_form.text_field :measurement %>

      </li>
    <% end %>
  </ul>

  <%= form.submit 'Create Recipe' %>
<% end %>
