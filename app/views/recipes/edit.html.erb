<div class="row header" id="show-head">
  <div class="col-md-8 col-sm-8 col-lg-8"></div>
  <div  class="col-md-4 col-sm-4 col-lg-4">
    <h1>Edit Recipe</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-3 col-sm-1">

  </div>
  <div class="col-md-6 col-sm-10">
  <div class="new-form">
    <%= form_for @recipe do |form| %>
      <%if @recipe.errors.any? %>
        <div id="error_explantion">
          <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <div style="color: red;"><%= msg %></div>
        <% end %>
          </ul>
        </div>
      <% end %>
  <%=form_tag("/recipes/#{@recipe.id}", method: "put") do%>
  <div class="form-group">
  <label for="name"> Name:</label>
    <input class="form-control" name="recipe[name]" type="text" placeholder="ex: Cookies"><p>
  </div>
  <div class="form-group">
  <label for="recipe[difficulty_level]"> Difficulty Level: </label>
    <select class="form-control" name="recipe[difficulty_level]" placeholder="Select Level">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div class="form-group">
  <label for="prep_time"> Prep Time: </label>
    <input class="form-control" type="text" name="recipe[prep_time]" placeholder="Preperation Time (Minutes)"> <p>
  </div>
  <div class="form-group">
  <label for="directions"> Directions: </label>
    <input class="form-control" type="text-area" name="recipe[directions]" placeholder="Update Recipe"><p>
  </div>
  <div class="form-group">
  <label for="category"> Category: </label>
    <select class="form-control" placeholder="Select Category">
      <option value="Dessert">Dessert</option>
      <option value="Appetizer">Appetizer</option>
      <option value="Salad">Salad</option>
      <option value="Main Course">Main Course</option>
    </select>
  </div>
    <p>

    <p> <% @recipe.ingredients.each do |i| %>
    <p>- <%= i.amount%> <%= i.measurement %><%if i.amount != 1%>'s
    <%end%> of <%= i.item %> </p>
    <%end%>
    </p>

  <input type="submit" class="btn btn-primary btn-lg btn-default" placeholder="Update Recipe">

  <%end%>
    </div>
  </div>
</div>
